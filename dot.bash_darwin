alias proxy-resolv='proxyresolv -f $HOME/.proxychains.conf'

#-- Block: dict()
#-- Purpose: searches ARGV1
#--------------------------------------------------------------------------------------------------#
function dict() {
    if [ $# -eq 0 ]; then echo "Usage:\n ARGV1 = word to query in dictionaries";
    else
	echo "#-- Searching dictionary for: ${1}"
	echo "#--------------------------------------------------------------------------------------------------#"
	curl dict://dict.org/d:"${1}";
	echo -e  "#--------------------------------------------------------------------------------------------------#"
	
	echo "#-- Searching Wikipedia for: ${1}"
	echo "#--------------------------------------------------------------------------------------------------#"
	wikit "${1}";
	echo "#--------------------------------------------------------------------------------------------------#"
    fi
}
